{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "immichframe",
  "identifier": "com.immichframe.immichframe",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "immichframe",
        "width": 800,
        "height": 600,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/AppIcon.png",
      "icons/AppIcon.icns",
      "icons/AppIcon.ico"
    ]
  },
  "package": {
    "version": "1.0.3"
  }
}
